<Page x:Class="Animal_Info.Pages.AddPhotoMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animal_Info.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPhotoMenu">

    <Grid Background="White">
        
            <StackPanel Grid.Row="0" HorizontalAlignment="center">
            <TextBlock FontSize="30">Добавление фотокарточки</TextBlock>
            <StackPanel VerticalAlignment="Bottom">
                <Button Width="100" Click="Button_Click">Добавить</Button>
            </StackPanel>
            </StackPanel>
        
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="10">
            <TextBlock FontSize="20">Питомец</TextBlock>
            <ComboBox Width="100" Margin="10 0 0 0"></ComboBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="10">
            <TextBlock FontSize="20">Описание</TextBlock>
            <TextBox Width="100" Margin="10 0 0 0"></TextBox>
        </StackPanel>
     
        
    </Grid>
</Page>
