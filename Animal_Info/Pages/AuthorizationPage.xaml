<Page x:Class="Animal_Info.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animal_Info.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid Background="Bisque">
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" >
            <TextBlock FontSize="40" Margin="0 20 0 0" FontWeight="SemiBold">Фотоальбом</TextBlock>
            <StackPanel Grid.Row="1" Margin="0 40 0 0">
                <TextBlock FontSize="30" HorizontalAlignment="Center"  FontWeight="SemiBold">Имя</TextBlock>
                <ComboBox x:Name="loginCb" ItemsSource="{Binding Masters}" Margin="10" Width="150" Background="DarkOliveGreen" Foreground="White" BorderBrush="Black" BorderThickness="3"></ComboBox>
                <Button Width="150" Height="40" Margin="0 40 0 0" Foreground="White" Background="DarkOliveGreen" BorderBrush="Black" BorderThickness="5" Click="Button_Click">𝕰𝖓𝖙𝖊𝖗</Button>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
